<%= simple_form_for(@medication, html: {class: 'form-signin'}) do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :name, required: true, label: false, placeholder: 'Name' %>
    <%= f.input :manufacturer, required: true, label: false, placeholder: 'Manufacturer' %>
    <%= f.input :description, required: true, label: false, placeholder: 'Description' %>
    <%= f.input :price, required: true, label: false, placeholder: 'Price' %>
    <%= f.input :availability %>
  


    <%= f.button :submit, class: 'btn btn-primary btn-block' %>

<% end %>
